{
    "manifest_version": 3,
    "name": "PDF Reader Pro",
    "version": "1.0.0",
    "description": "A modern, fast, and user-friendly PDF Reader application.",
    "action": {
        "default_title": "Open PDF Reader",
        "default_icon": {
            "192": "icon-192.png",
            "512": "icon-512.png"
        }
    },
    "icons": {
        "192": "icon-192.png",
        "512": "icon-512.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}